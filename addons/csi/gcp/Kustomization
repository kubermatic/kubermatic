apiVersion: kustomize.config.k8s.io/v1beta1
kind: Kustomization
namespace: kube-system
resources:
  - https://github.com/kubernetes-sigs/gcp-compute-persistent-disk-csi-driver.git/deploy/kubernetes/base/controller
  - https://github.com/kubernetes-sigs/gcp-compute-persistent-disk-csi-driver.git/deploy/kubernetes/base/node_linux
transformers:
  - https://github.com/kubernetes-sigs/gcp-compute-persistent-disk-csi-driver.git/deploy/kubernetes/images/stable-master
patches:
  - patch: |-
      - op: add
        path: /spec/template/spec/securityContext
        value:
          seccompProfile:
            type: RuntimeDefault
    target:
      kind: DaemonSet
  - patch: |-
      - op: add
        path: /spec/template/spec/securityContext
        value:
          seccompProfile:
            type: RuntimeDefault
    target:
      kind: Deployment
  - patch: |-
      - op: add
        path: /spec/template/metadata/annotations
        value:
          cluster-autoscaler.kubernetes.io/safe-to-evict-local-volumes: socket-dir
    target:
      kind: Deployment
