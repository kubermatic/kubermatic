podDisruptionBudget:
  # This isn't really meaningful as we run with a single replica, but if we
  # defined a minAvailable=1 PDB, Kubernetes would block that Pod from being
  # evicted, see https://github.com/kubernetes/kubernetes/issues/93476;
  # We still need a PDB to make the Pod evictable by the cluster-autoscaler.
  maxUnavailable: 1

kubeRBACProxy:
  enabled: true
  resources:
    limits:
      cpu: 40m
      memory: 40Mi
    requests:
      cpu: 20m
      memory: 20Mi

# with kubeRBACProxy enabled above, default scraping won't work, showring errors
prometheusScrape: false

networkPolicy:
  enabled: true

  ingress:
    - from:
        - namespaceSelector:
            matchLabels:
              component: mla
          podSelector:
            matchLabels:
              component: mla
      ports:
        - port: 8443
          protocol: TCP

  egress:
    - to:
        - ipBlock:
            cidr: '{{ .Cluster.Address.IP }}/32'
      ports:
        - port: '{{ .Cluster.Address.Port }}'

resources:
  limits:
    cpu: 100m
    memory: 600Mi
  requests:
    cpu: 10m
    memory: 190Mi
