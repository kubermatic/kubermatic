# Alert for any disk that will have < 0B free in 4 hours.
ALERT DiskWillFillIn4Hours
  IF predict_linear(node_filesystem_free{name="node-exporter"}[1h], 4*3600) < 0
  FOR 5m
  LABELS {
    severity="page"
  }

# Alert for any disk that will have < 0B free in 8 hours.
ALERT DiskWillFillIn8Hours
  IF predict_linear(node_filesystem_free{name="node-exporter"}[1h], 8*3600) < 0
  FOR 5m
  LABELS {
    severity="notify"
  }
